<h1>To Do List</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
    <%= link_to task.title, task_path(task) %> <%= link_to task_path(task.id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } do%>
          <i class="fas fa-trash-alt"></i>
        <% end %></li>
  <% end %>
</ul>

<p><%= link_to new_task_path do %>
        <i class="fas fa-edit"></i> Add a new task
        <% end %></p>

